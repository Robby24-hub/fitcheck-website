@*
   
*@
@{

    Layout = null;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS - FIXED -->
    <link rel="stylesheet" href="~/css/Products.css" asp-append-version="true" />
    <!-- Favicon -->
    <link rel="icon" href="~/images_fitcheck/fitcheckicon.png" />
    <title>Products | FitCheck Gym</title>
</head>
<body>
    <header>

        <div class="brand-container">
            <img asp-append-version="true" src="~/images_fitcheck/fitcheckicon.png" alt="logo" class="logo" />
            <h1 class="brand">FITCHECK</h1>
        </div>

        <nav class="navbar">
            <a asp-controller="Account" asp-action="UserHome">Home</a>
            <a asp-controller="Transaction" asp-action="UserMembership">Membership</a>
            <a asp-controller="Account" asp-action="ClassesUser">Classes</a>
            <a asp-controller="Account" asp-action="Products">Products</a>
            <a asp-controller="Account" asp-action="AccountUser">Account</a>
            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit" class="logout-btn">Logout</button>
            </form>

        </nav>
    </header>


    <!-- MAIN SECTION -->
	<main>
		<div class="product-section">
		    <h1>PRODUCTS</h1>
            <p>OUR PRODUCTS ARE AVAILABLE EXCLUSIVELY IN OUR PHYSICAL STORE</p>
	    </div>

        <div class="product-grid">
            <!-- Product 1 -->
            <div class="product-card">
                <img src="@Url.Content("~/images_fitcheck/products_images/WHEY PROTEIN.jpg")" alt="Whey Protein" />
                <div class="product-info">
                    <p class="name">ON Whey Protein</p>
                    <p class="desc">High-quality protein to boost muscle recovery and growth.</p>
                    <p class="price">₱3,599</p>
                </div>
            </div>

            <!-- Product 2 -->
            <div class="product-card">
                <img src="@Url.Content("~/images_fitcheck/products_images/CASEIN.png")" alt="Casein" />
                <div class="product-info">
                    <p class="name">GS Casein</p>
                    <p class="desc">Slow-digesting protein for overnight muscle repair.</p>
                    <p class="price">₱4,100</p>
                </div>
            </div>

            <!-- Product 3 -->
            <div class="product-card">
                <img src="@Url.Content("~/images_fitcheck/products_images/ISOLATE.jpg")" alt="Isolate" />
                <div class="product-info">
                    <p class="name">GS Isolate</p>
                    <p class="desc">Ultra-pure protein isolate for lean muscle growth.</p>
                    <p class="price">₱4,653</p>
                </div>
            </div>

            <!-- Product 4 -->
            <div class="product-card">
                <img src="@Url.Content("~/images_fitcheck/products_images/MULTIVITAMINS.webp")" alt="Multivitamins" />
                <div class="product-info">
                    <p class="name">Multivitamins</p>
                    <p class="desc">Essential daily vitamins to boost energy and immunity.</p>
                    <p class="price">₱799</p>
                </div>
            </div>

            <!-- Product 5 -->
            <div class="product-card">
                <img src="@Url.Content("~/images_fitcheck/products_images/OPTI-WOMEN.png")" alt="Opti-Women" />
                <div class="product-info">
                    <p class="name">Opti-Women</p>
                    <p class="desc">Balanced formula designed for women’s nutritional needs.</p>
                    <p class="price">₱2,599</p>
                </div>
            </div>

            <!-- Product 6 -->
            <div class="product-card">
                <img src="@Url.Content("~/images_fitcheck/products_images/PROTEIN SHAKE.png")" alt="Protein Shake" />
                <div class="product-info">
                    <p class="name">Protein Shake</p>
                    <p class="desc">Ready-to-drink shake for quick energy and recovery.</p>
                    <p class="price">₱599</p>
                </div>
            </div>

            <!-- Product 7 -->
            <div class="product-card">
                <img src="@Url.Content("~/images_fitcheck/products_images/PRE-WORKOUT.webp")" alt="Pre-Workout" />
                <div class="product-info">
                    <p class="name">ON Pre-Workout</p>
                    <p class="desc">Boost energy and focus before every intense session.</p>
                    <p class="price">₱1,250</p>
                </div>
            </div>

            <!-- Product 8 -->
            <div class="product-card">
                <img src="@Url.Content("~/images_fitcheck/products_images/GAINER.webp")" alt="Gainer" />
                <div class="product-info">
                    <p class="name">ON Gainer 10 Pound</p>
                    <p class="desc">High-calorie formula to help you gain size and strength.</p>
                    <p class="price">₱5,816</p>
                </div>
            </div>
        </div>
    </main>


<!-- FOOTER -->
    <div class="hr-container">
        <hr>
    </div>

    <footer>
        <div class="footer-container">
            <div class="left-side-footer">
                <div class="description-footer">
                    <img class="fitcheck-logo-footer" src="~/images_fitcheck/fitcheckicon.png">
                    <p>Transform your body and mind at FitCheck Gym. With state-of-the-art equipment, expert trainers, and a supportive community, we're here to help you achieve your fitness goals.</p>
                </div>
                <div class="follow-socials-container">
                    <h4 class="follow-us-footer">FOLLOW US</h4>
                    <div class="social-media-container">
                        <a target="_blank" href="https://www.facebook.com/"><img src="~/images_fitcheck/icon_fb-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.linkedin.com/"><img src="~/images_fitcheck/Icon_linkedin-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.youtube.com/"><img src="~/images_fitcheck/icon_youtube-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.instagram.com/"><img src="~/images_fitcheck/icon_instagram-removebg-preview.png"></a>
                    </div>
                </div>
            </div>
            <div class="right-side-footer">
                <div class="address">
                    <img src="~/images_fitcheck/icon_location-removebg-preview.png">
                    <p>Street 1, Congressional Rd Caloocan City</p>
                </div>
                <div class="email-address">
                    <img src="~/images_fitcheck/icon_email-removebg-preview.png">
                    <p>info@fitcheckgym.com</p>
                </div>
                <div class="contact-number">
                    <img src="~/images_fitcheck/icon_mobile-removebg-preview.png">
                    <p>09192344890 / 09365144587</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
