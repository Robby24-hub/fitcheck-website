@*
   
*@
@{

    Layout = null;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Fitcheck — Select Payment Method</title>
    <link rel="stylesheet" href="~/css/Products.css" />
</head>
<body>
    <header>
        <div class="brand-container">
            <img alt="logo" class="logo" src="~/images_fitcheck/fitcheckicon.png">
            <h1 class="brand">FITCHECK</h1>
        </div>
        <nav class="navbar">

            <a asp-controller="Account" asp-action="UserHome">Home</a>
            <a asp-controller="Transaction" asp-action="UserMembership">Membership</a>
            <a asp-controller="Account" asp-action="ClassesUser">Classes</a>
            <a asp-controller="Account" asp-action="Products">Products</a>
            <a href="#">Account</a>
            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit" class="logout-btn">Logout</button>
            </form>

        </nav>
    </header>

    <!-- MAIN SECTION -->
    <main class="product-section">
        <h2>Our Products Are Available Exclusively In Our Physical Store</h2>

        <div class="product-grid">
            <!-- Product Cards -->
            <div class="product-card">
                <img src="~/images_fitcheck/products_images/PROTEIN.jpg" />
                <div class="product-info">
                    <p class="name">ON WHEY PROTEIN</p>
                    <p class="price">3,599</p>
                </div>
            </div>

            <div class="product-card">
                <img src="~/images_fitcheck/products_images/CASEIN.png" />
                <div class="product-info">
                    <p class="name">GS CASEIN</p>
                    <p class="price">4,100</p>
                </div>
            </div>

            <div class="product-card">
                <img src="~/images_fitcheck/products_images/ISOLATE.jpg" />
                <div class="product-info">
                    <p class="name">GS ISOLATE</p>
                    <p class="price">4,653</p>
                </div>
            </div>

            <div class="product-card">
                <img src="~/images_fitcheck/products_images/MULTIVITAMINS.webp" />
                <div class="product-info">
                    <p class="name">MULTIVITAMINS</p>
                    <p class="price">799</p>
                </div>
            </div>

            <div class="product-card">
                <img src="~/images_fitcheck/products_images/OPTI-WOMEN.png" alt="Fuentra Workout" />
                <div class="product-info">
                    <p class="name">OPTI-WOMEN</p>
                    <p class="price">2,599</p>
                </div>
            </div>

            <div class="product-card">
                <img src="~/images_fitcheck/products_images/PROTEIN SHAKE.png" alt="Fuentra Workout" />
                <div class="product-info">
                    <p class="name">PROTEIN SHAKE</p>
                    <p class="price">599</p>
                </div>
            </div>

            <div class="product-card">
                <img src="~/images_fitcheck/products_images/PRE-WORKOUT.webp" alt="Fuentra Workout" />
                <div class="product-info">
                    <p class="name">ON PRE-WORKOUT</p>
                    <p class="price">1,250</p>
                </div>
            </div>

            <div class="product-card">
                <img src="~/images_fitcheck/products_images/GAINER.webp" alt="Fuentra Workout" />
                <div class="product-info">
                    <p class="name">ON GAINER 10 POUND</p>
                    <p class="price">5,816</p>
                </div>
            </div>
        </div>
    </main>


<!-- FOOTER -->
<footer>
    <div class="footer-container">

        <!-- LEFT SIDE -->
        <div class="footer-left">
            <div class="footer-top">
                <img src="~/images_fitcheck/fitcheckicon.png" alt="FitCheck Logo" class="footer-logo">
                <p class="footer-desc">
                    Transform your body and mind at FitCheck Gym.
                    With state-of-the-art equipment, expert trainers,
                    and a supportive community, we’re here to help
                    you achieve your fitness goals.
                </p>
            </div>

            <div class="footer-bottom">
                <p class="follow-text">FOLLOW US</p>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-linkedin"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>

        <!-- RIGHT SIDE -->
        <div class="footer-right">
            <p><i class="fas fa-map-marker-alt"></i> Street 1, Congressional Rd Caloocan City</p>
            <p><i class="fas fa-envelope"></i> info@fitcheckgym.com</p>
            <p><i class="fas fa-mobile-alt"></i> 09192344890 / 09365414587</p>
        </div>

    </div>
</footer>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

</body>

</html>

