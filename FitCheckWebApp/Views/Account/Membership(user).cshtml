<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Membership(user).css">
    <link rel="icon" href="~/images_fitcheck/LOGO.png">
    <title>Membership | FitCheck Gym</title>
</head>
<body>
    <header>
        <div class="brand-container">
            <img alt="logo" class="logo" src="~/images_fitcheck/LOGO.png">
            <h1 class="brand">FITCHECK</h1>
        </div>
        <nav class="navbar">
            <a href="">Home</a>
            <a href="Membership(user).cshtml">Membership</a>
            <a href="">Classes</a>
            <a href="LogInPage.cshtml">Log out</a>
        </nav>
    </header>

    <main>
        <div class="container">
            <h1>Choose your plan</h1>
            
            <div class="plans-wrapper">
                <!-- FITSTART Plan -->
                <div class="plan-card">
                    <div class="plan-name">FITSTART</div>
                    <div class="price">
                        <span class="price-amount">₱ 999</span>
                        <span class="price-period">/mo</span>
                    </div>
                    <div class="plan-description">
                        Simple. <span class="highlight-word">Affordable</span>. Start your journey.
                    </div>
                    <div class="includes-label">Includes:</div>
                    <ul class="features-list">
                        <li>24/7 gym access</li>
                        <li>Unlimited standard classes</li>
                        <li>Starter Health Check</li>
                        <li>Free member parking</li>
                    </ul>
                    <a class="subscribe-btn" href="PaymentMethod.cshtml?plan=FITSTART&price=999">SUBSCRIBE NOW</a>
                </div>

                <!-- FITELITE Plan -->
                <div class="plan-card featured">
                    <div class="plan-name">FITELITE</div>
                    <div class="price">
                        <span class="price-amount">₱ 2,499</span>
                        <span class="price-period">/mo</span>
                    </div>
                    <div class="plan-description">
                        Exclusive perks. <span class="highlight-word">Premium</span> fitness lifestyle.
                    </div>
                    <div class="includes-label">Includes:</div>
                    <ul class="features-list">
                        <li>24/7 gym access</li>
                        <li>Unlimited group + specialty classes</li>
                        <li>Health & Lifestyle assessment</li>
                        <li>Free member parking</li>
                        <li>Exclusive premium lounge</li>
                        <li>VIP locker rooms & showers</li>
                        <li>Discounts on gym merchandise</li>
                        <li>Free guest pass once a month</li>
                    </ul>
                    <a class="subscribe-btn" href="PaymentMethod.cshtml?plan=FITELITE&price=2499">SUBSCRIBE NOW</a>
                </div>

                <!-- FITPRO Plan -->
                <div class="plan-card">
                    <div class="plan-name">FITPRO</div>
                    <div class="price">
                        <span class="price-amount">₱ 1,499</span>
                        <span class="price-period">/mo</span>
                    </div>
                    <div class="plan-description">
                        Train harder. <span class="highlight-word">Unlock</span> more benefits.
                    </div>
                    <div class="includes-label">Includes:</div>
                    <ul class="features-list">
                        <li>24/7 gym access</li>
                        <li>Unlimited group fitness classes</li>
                        <li>Health & Lifestyle assessment</li>
                        <li>Free member parking</li>
                        <li>Access to community events</li>
                        <li>20% discount on merchandise</li>
                    </ul>
                    <a class="subscribe-btn" href="PaymentMethod.cshtml?plan=FITPRO&price=1499">SUBSCRIBE NOW</a>
                </div>
            </div>
        </div>
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="footer-container">
            <div class="footer-left">
                <div class="footer-top">
                    <img src="~/images_fitcheck/logo.png" alt="FitCheck Logo" class="footer-logo">
                    <p class="footer-desc">
                        Transform your body and mind at FitCheck Gym.
                    </p>
                </div>
                <div class="footer-bottom">
                    <p class="follow-text">FOLLOW US</p>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-right">
                <p><i class="fas fa-map-marker-alt"></i> Street 1, Congressional Rd Caloocan City</p>
                <p><i class="fas fa-envelope"></i> info@fitcheckgym.com</p>
                <p><i class="fas fa-mobile-alt"></i> 09192344890 / 09365414587</p>
            </div>
        </div>
    </footer>
</body>
</html>
