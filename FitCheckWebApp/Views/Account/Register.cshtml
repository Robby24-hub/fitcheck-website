@using FitCheckWebApp.ViewModels.Account

@{
    Layout = null;
}

@model RegistrationViewModel

<!DOCTYPE html>
<html lang="en" id="terms-and-conditions">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Registration.css" asp-append-version="true" />
    <link rel="icon" href="/images_fitcheck/fitcheckicon.png" />
    <title>Registration | FitCheck Gym</title>
</head>
<body>
    <header>
        <div class="brand-container">
            <img alt="logo" class="logo" src="/images_fitcheck/fitcheckicon.png">
            <h1 class="brand">FITCHECK</h1>
        </div>
        <nav class="navbar">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="Membership">Membership</a>
            <a asp-controller="Home" asp-action="Classes">Classes</a>
            <a asp-controller="Home" asp-action="AboutUs">About Us</a>
            <a asp-controller="Account" asp-action="Login">Log In</a>
        </nav>
    </header>

    <main>
        <div class="outer-container">
            <div class="container">
                <h1 class="txt-membership-registration">FITCHECK MEMBERSHIP REGISTRATION</h1>
                <form class="registration-form" method="post" asp-controller="Account" asp-action="Register">

                    <!-- Personal Information -->
                    <section class="form-section">
                        <h2 class="section-title">PERSONAL INFORMATION</h2>
                        <div class="form-group">
                            <div class="input-row">
                                <div class="input-wrapper">
                                    <input asp-for="FirstName" type="text" placeholder="First Name" class="input-field half" required>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>

                                <div class="input-wrapper">
                                    <input asp-for="LastName" type="text" placeholder="Last Name" class="input-field half" required>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="input-row">
                                <div class="input-wrapper">
                                    <input asp-for="BirthDate" type="date" placeholder="Birthday" class="input-field medium" required>
                                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                                </div>

                                <div class="input-wrapper">
                                    <input asp-for="Age" type="number" id="ageOutput" placeholder="Age" class="input-field small" readonly>
                                </div>

                                <div class="input-wrapper">
                                    <select asp-for="Gender" class="input-field small">
                                        <option value="" disabled selected hidden>Gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="input-row">
                                <div class="input-wrapper">
                                    <input asp-for="ContactNumber" type="tel" placeholder="Contact Number" class="input-field half" required>
                                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                                </div>

                                <div class="input-wrapper">
                                    <input asp-for="Email" type="email" placeholder="Email Address" class="input-field half" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Account Setup -->
                    <section class="form-section">
                        <h2 class="section-title">ACCOUNT SETUP</h2>
                        <div class="form-group">
                            <div class="input-wrapper">
                                <input asp-for="Username" type="text" placeholder="Create Username" class="input-field full" required>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="input-wrapper">
                                <input asp-for="Password" type="password" placeholder="Create Password" class="input-field full" required>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="input-wrapper">
                                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" class="input-field full" required>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </section>

                    <!-- Emergency Contact -->
                    <section class="form-section">
                        <h2 class="section-title">EMERGENCY CONTACT</h2>
                        <div class="form-group">
                            <div class="input-wrapper">
                                <input asp-for="FullName" type="text" placeholder="Full Name" class="input-field full" required>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="input-wrapper">
                                <input asp-for="EmergencyContactNumber" type="tel" placeholder="Cellphone Number" class="input-field full" required>
                                <span asp-validation-for="EmergencyContactNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </section>

                    <!-- Terms and Conditions -->
                    <div class="terms-section">
                        <div class="checkbox-wrapper">
                            <label class="checkbox-label">
                                <input asp-for="AgreeTerms" type="checkbox" class="checkbox" />
                                <span>
                                    I agree to the
                                    <a asp-controller="Account" asp-action="TermsAndConditions" class="link">Terms and Conditions</a>
                                </span>
                            </label>
                            <span asp-validation-for="AgreeTerms" class="text-danger termscondprvipol"></span>
                        </div>

                        <div class="checkbox-wrapper">
                            <label class="checkbox-label">
                                <input asp-for="AgreePrivacy" type="checkbox" class="checkbox" />
                                <span>
                                    I agree to the
                                    <a asp-controller="Account" asp-action="PrivacyPolicy" class="link">Privacy Policy</a>
                                </span>
                            </label>
                            <span asp-validation-for="AgreePrivacy" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Register Button -->
                    <button type="submit" class="register-btn">REGISTER</button>
                </form>

                <p class="txt-login-here">
                    Already have an account?
                    <a asp-controller="Account" asp-action="Login">Log In Here</a>
                </p>
            </div>
        </div>
    </main>

    <div class="hr-container">
        <hr>
    </div>

    <footer>
        <div class="footer-container">
            <div class="left-side-footer">
                <div class="description-footer">
                    <img class="fitcheck-logo-footer" src="/images_fitcheck/fitcheckicon.png">
                    <p>
                        Transform your body and mind at FitCheck Gym. With state-of-the-art equipment,
                        expert trainers, and a supportive community, we're here to help you achieve your fitness goals.
                    </p>
                </div>

                <div class="follow-socials-container">
                    <h4 class="follow-us-footer">FOLLOW US</h4>
                    <div class="social-media-container">
                        <a target="_blank" href="https://www.facebook.com/"><img src="/images_fitcheck/icon_fb-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.linkedin.com/"><img src="/images_fitcheck/icon_linkedin-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.youtube.com/"><img src="/images_fitcheck/icon_youtube-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.instagram.com/"><img src="/images_fitcheck/icon_instagram-removebg-preview.png"></a>
                    </div>
                </div>
            </div>

            <div class="right-side-footer">
                <div class="address">
                    <img src="/images_fitcheck/icon_location-removebg-preview.png">
                    <p>Street 1, Congressional Rd Caloocan City</p>
                </div>
                <div class="email-address">
                    <img src="/images_fitcheck/icon_email-removebg-preview.png">
                    <p>info@fitcheckgym.com</p>
                </div>
                <div class="contact-number">
                    <img src="/images_fitcheck/icon_mobile-removebg-preview.png">
                    <p>09192344890 / 09365144587</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/register.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const birthDateInput = document.querySelector("input[name='BirthDate']");
            const ageOutput = document.getElementById("ageOutput");

            if (birthDateInput && ageOutput) {
                // Set max date to today
                const today = new Date().toISOString().split("T")[0];
                birthDateInput.setAttribute("max", today);

                // Set min date to 120 years ago (reasonable maximum human age)
                const minDate = new Date();
                minDate.setFullYear(minDate.getFullYear() - 120);
                birthDateInput.setAttribute("min", minDate.toISOString().split("T")[0]);

                birthDateInput.addEventListener("change", function () {
                    const birthDateValue = this.value;
                    if (!birthDateValue) {
                        ageOutput.value = "";
                        return;
                    }

                    // Parse date components to avoid timezone issues
                    const [year, month, day] = birthDateValue.split("-").map(Number);
                    const todayDate = new Date();

                    let age = todayDate.getFullYear() - year;

                    // Check if birthday hasn't occurred yet this year
                    const currentMonth = todayDate.getMonth() + 1; // JavaScript months are 0-indexed
                    const currentDay = todayDate.getDate();

                    if (month > currentMonth || (month === currentMonth && day > currentDay)) {
                        age--;
                    }

                    // Display age only if it's reasonable
                    ageOutput.value = (age >= 0 && age <= 120) ? age : "";
                });
            }
        });
    </script>

</body>
</html>