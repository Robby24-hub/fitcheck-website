@{
    Layout = null;
}

@model FitCheckWebApp.ViewModels.RegistrationViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Registration.css" type="text/css" />
    <link rel="icon" href="/images_fitcheck/fitcheckicon.png" />
    <title>Registration | FitCheck Gym</title>
</head>
<body>
    <header>
        <div class="brand-container">
            <img alt="logo" class="logo" src="/images_fitcheck/fitcheckicon.png">
            <h1 class="brand">FITCHECK</h1>
        </div>
        <nav class="navbar">
            <a href="/">Home</a>
            <a href="/Account/Membership">Membership</a>
            <a href="#">Classes</a>
            <a href="#">About Us</a>
            <a href="/Account/Login">Log In</a>
        </nav>
    </header>

    <main>
        <div class="outer-container">
            <div class="container">
                <h1 class="txt-membership-registration">FITCHECK MEMBERSHIP REGISTRATION</h1>
                <form class="registration-form" method="post" asp-controller="Account" asp-action="Register">
                    <!-- Personal Information -->
                    <section class="form-section">
                        <h2 class="section-title">PERSONAL INFORMATION</h2>
                        <div class="form-group">
                            <div class="input-row">

                                <input asp-for="FullName" type="text" name="fullName" placeholder="Full Name" class="input-field large" >
                                <span asp-validation-for="FullName" class="text-danger"></span>

                                <select asp-for="Gender" name="gender" class="input-field small" >
                                <span asp-validation-for="Gender" class="text-danger"></span>
                                    <option value="">Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>

                            </div>

                            <div class="input-row">

                                <input asp-for="Birthday" type="date" name="birthday" placeholder="Birthday" class="input-field medium" >
                                <span asp-validation-for="Birthday" class="text-danger"></span>

                                <input asp-for="Age" type="number" name="age" placeholder="Age" class="input-field small" >
                                <span asp-validation-for="Age" class="text-danger"></span>

                            </div>

                            <div class="input-row">

                                <input asp-for="ContactNumber" type="tel" name="contactNumber" placeholder="Contact Number" class="input-field medium" >
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>

                                <input asp-for="Email" type="email" name="email" placeholder="Email Address" class="input-field medium" >
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>

                        </div>
                    </section>

                    <!-- Membership Plan -->
                    <section class="form-section">
                        <h2 class="section-title">MEMBERSHIP PLAN</h2>

                        <div class="form-group">

                            <select asp-for="MembershipPlan" name="membershipPlan" class="input-field full" >
                            <span asp-validation-for="MembershipPlan" class="text-danger"></span>
                                <option value="">Select Membership Plan</option>
                                <option value="FitStart">FitStart - 1 Month</option>
                                <option value="FitElite">FitElite - 1 Month</option>
                                <option value="FitPro">FitPro - 1 Month</option>
                            </select>

                        </div>

                    </section>

                    <!-- Payment Information -->
                    <section class="form-section">
                        <h2 class="section-title">PAYMENT INFORMATION</h2>

                        <div class="form-group">
                                
                            <select asp-for="PaymentMethod" name="paymentMethod" class="input-field full" >
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                                <option value="">Select Payment Method</option>
                                <option value="credit">Credit Card</option>
                                <option value="debit">Debit Card</option>
                                <option value="cash">Cash</option>
                            </select>

                        </div>

                    </section>

                    <!-- Account Setup -->
                    <section class="form-section">
                        <h2 class="section-title">ACCOUNT SETUP</h2>
                        <div class="form-group">
                            <input asp-for="Username" type="text" name="username" placeholder="Create Username" class="input-field full" >
                            <span asp-validation-for="Username" class="text-danger"></span>

                            <input asp-for="Password" type="password" name="password" placeholder="Create Password" class="input-field full" >
                            <span asp-validation-for="Username" class="text-danger"></span>

                            <input asp-for="ConfirmPassword "type="password" name="confirmPassword" placeholder="Confirm Password" class="input-field full" >
                            <span asp-validation-for="Username" class="text-danger"></span>

                        </div>
                    </section>

                    <!-- Terms and Conditions -->
                    <div class="terms-section">

                        <label class="checkbox-label">

                            <input asp-for="AgreeTerms" type="checkbox" name="agreeTerms" class="checkbox">
                            <span>I agree to the <a href="#" class="link">Terms and Conditions</a></span>

                        </label>
                        <span asp-validation-for="AgreeTerms" class="text-danger"></span>

                        <label class="checkbox-label">

                            <input asp-for="AgreePrivacy" type="checkbox" name="agreePrivacy" class="checkbox">
                            <span>I agree to the <a href="#" class="link">Privacy Policy</a></span>

                        </label>
                        <span asp-validation-for="AgreePrivacy" class="text-danger"></span>

                    </div>

                    <!-- Register Button -->
                    <button type="submit" class="register-btn">REGISTER</button>
                </form>
            </div>
        </div>
    </main>

    <div class="hr-container">
        <hr>
    </div>
    <footer>
        <div class="footer-container">
            <div class="left-side-footer">
                <div class="description-footer">
                    <img class="fitcheck-logo-footer" src="/images_fitcheck/fitcheckicon.png">
                    <p>Transform your body and mind at FitCheck Gym. With state-of-the-art equipment, expert trainers, and a supportive community, we're here to help you achieve your fitness goals.</p>
                </div>
                <div class="follow-socials-container">
                    <h4 class="follow-us-footer">FOLLOW US</h4>
                    <div class="social-media-container">
                        <a target="_blank" href="https://www.facebook.com/"><img src="/images_fitcheck/icon_fb-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.linkedin.com/"><img src="/images_fitcheck/Icon_linkedin-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.youtube.com/"><img src="/images_fitcheck/icon_youtube-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.instagram.com/"><img src="/images_fitcheck/icon_instagram-removebg-preview.png"></a>
                    </div>
                </div>
            </div>
            <div class="right-side-footer">
                <div class="address">
                    <img src="/images_fitcheck/icon_location-removebg-preview.png">
                    <p>Street 1, Congressional Rd Caloocan City</p>
                </div>
                <div class="email-address">
                    <img src="/images_fitcheck/icon_email-removebg-preview.png">
                    <p>info@fitcheckgym.com</p>
                </div>
                <div class="contact-number">
                    <img src="/images_fitcheck/icon_mobile-removebg-preview.png">
                    <p>09192344890 / 09365144587</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
