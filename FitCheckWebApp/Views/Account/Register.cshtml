@{
    Layout = null;
}

@model FitCheckWebApp.ViewModels.RegistrationViewModel

<!DOCTYPE html>
<html lang="en" id="terms-and-conditions">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Registration.css" asp-append-version="true" />
    <link rel="icon" href="/images_fitcheck/fitcheckicon.png" />
    <title>Registration | FitCheck Gym</title>
</head>
<body>
    <header>
        <div class="brand-container">
            <img alt="logo" class="logo" src="/images_fitcheck/fitcheckicon.png">
            <h1 class="brand">FITCHECK</h1>
        </div>
        <nav class="navbar">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Transaction" asp-action="Membership">Membership</a>
            <a href="#">Classes</a>
            <a href="#">About Us</a>
            <a asp-controller="Account" asp-action="Login">Log In</a>
        </nav>
    </header>

    <main>
        <div class="outer-container">
            <div class="container">
                <h1 class="txt-membership-registration">FITCHECK MEMBERSHIP REGISTRATION</h1>
                <form class="registration-form" method="post" asp-controller="Account" asp-action="Register">
                    
                    <!-- Personal Information -->
                    <section class="form-section">
                        <h2 class="section-title">PERSONAL INFORMATION</h2>
                        <div class="form-group">
                            <div class="input-row">
                                <input asp-for="FirstName" type="text" placeholder="First Name" class="input-field medium" required>
                                <span asp-validation-for="FirstName" class="text-danger"></span>

                                <input asp-for="LastName" type="text" placeholder="Last Name" class="input-field medium" required>
                                <span asp-validation-for="LastName" class="text-danger"></span>

                                
                            </div>

                            <div class="input-row">
                                <input asp-for="Birthday" type="date" placeholder="Birthday" class="input-field medium" required>
                                <span asp-validation-for="Birthday" class="text-danger"></span>

                                <input asp-for="Age" type="number" id="ageOutput" placeholder="Age" class="input-field small" readonly>

                                <select asp-for="Gender" class="input-field small">
                                    <option value="">Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                            <div class="input-row">
                                <input asp-for="ContactNumber" type="tel" placeholder="Contact Number" class="input-field medium" required>
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>

                                <input asp-for="Email" type="email" placeholder="Email Address" class="input-field medium" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </section>

                    <!-- Account Setup -->
                    <section class="form-section">
                        <h2 class="section-title">ACCOUNT SETUP</h2>
                        <div class="form-group">
                            <input asp-for="Username" type="text" placeholder="Create Username" class="input-field full" required>
                            <span asp-validation-for="Username" class="text-danger"></span>

                            <input asp-for="Password" type="password" placeholder="Create Password" class="input-field full" required>
                            <span asp-validation-for="Password" class="text-danger"></span>

                            <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" class="input-field full" required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </section>


                    <!-- Emergency Contact -->
                    <section class="form-section">
                        <h2 class="section-title">EMERGENCY CONTACT</h2>
                        <div class="form-group">
                            <input asp-for="FullName" type="text" placeholder="Full Name" class="input-field full" required>
                            <span asp-validation-for="FullName" class="text-danger"></span>

                            <input asp-for="ContactNumber" type="tel" placeholder="Cellphone Number" class="input-field full" required>
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>
                    </section>

                    <!-- Terms and Conditions -->
                    <div class="terms-section">
                        <label class="checkbox-label">
                            <input asp-for="AgreeTerms" type="checkbox" class="checkbox" required>
                            <span>I agree to the <a asp-controller="Account" asp-action="TermsAndConditions" class="link">Terms and Conditions</a></span>
                        </label>
                        <span asp-validation-for="AgreeTerms" class="text-danger"></span>

                        <label class="checkbox-label">
                            <input asp-for="AgreePrivacy" type="checkbox" class="checkbox" required>
                            <span>I agree to the <a asp-controller="Account" asp-action="PrivacyPolicy" class="link">Privacy Policy</a></span>
                        </label>
                        <span asp-validation-for="AgreePrivacy" class="text-danger"></span>
                    </div>

                    <!-- Register Button -->
                    <button type="submit" class="register-btn">REGISTER</button>
                </form>

                <p class="txt-login-here">
                    Already have an account?
                    <a asp-controller="Account" asp-action="Login">Log In Here</a>
                </p>
            </div>
        </div>
    </main>

    <div class="hr-container">
        <hr>
    </div>

    <footer>
        <div class="footer-container">
            <div class="left-side-footer">
                <div class="description-footer">
                    <img class="fitcheck-logo-footer" src="/images_fitcheck/fitcheckicon.png">
                    <p>Transform your body and mind at FitCheck Gym. With state-of-the-art equipment,
                       expert trainers, and a supportive community, we're here to help you achieve your fitness goals.</p>
                </div>

                <div class="follow-socials-container">
                    <h4 class="follow-us-footer">FOLLOW US</h4>
                    <div class="social-media-container">
                        <a target="_blank" href="https://www.facebook.com/"><img src="/images_fitcheck/icon_fb-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.linkedin.com/"><img src="/images_fitcheck/Icon_linkedin-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.youtube.com/"><img src="/images_fitcheck/icon_youtube-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.instagram.com/"><img src="/images_fitcheck/icon_instagram-removebg-preview.png"></a>
                    </div>
                </div>
            </div>

            <div class="right-side-footer">
                <div class="address">
                    <img src="/images_fitcheck/icon_location-removebg-preview.png">
                    <p>Street 1, Congressional Rd Caloocan City</p>
                </div>
                <div class="email-address">
                    <img src="/images_fitcheck/icon_email-removebg-preview.png">
                    <p>info@fitcheckgym.com</p>
                </div>
                <div class="contact-number">
                    <img src="/images_fitcheck/icon_mobile-removebg-preview.png">
                    <p>09192344890 / 09365144587</p>
                </div>
            </div>
        </div>
    </footer>
</body>

<script src="~/js/register.js"></script>

</html>
