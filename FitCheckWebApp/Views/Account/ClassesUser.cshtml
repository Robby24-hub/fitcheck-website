@model FitCheckWebApp.ViewModels.ClassesUserViewModel
@{
    Layout = null;

    string[] daysOfWeek = { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/ClassesUser.css" asp-append-version="true" />
    <link rel="icon" href="~/images_fitcheck/fitcheckicon.png" />
    <title>Classes | FitCheck Gym</title>
</head>
<body>
    <header>
        <div class="brand-container">
            <img asp-append-version="true" src="~/images_fitcheck/fitcheckicon.png" alt="logo" class="logo" />
            <h1 class="brand">FITCHECK</h1>
        </div>

        <nav class="navbar">
            <a asp-controller="Account" asp-action="UserHome">Home</a>
            <a asp-controller="Transaction" asp-action="UserMembership">Membership</a>
            <a asp-controller="Account" asp-action="ClassesUser">Classes</a>
            <a asp-controller="Account" asp-action="Products">Products</a>
            <a asp-controller="Account" asp-action="AccountUser">Account</a>

            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </nav>
    </header>

    <main>
        <div class="classes-header">
            <h1>CLASSES</h1>
            <p>NEW CLASSES EVERY WEEK TO KEEP YOU MOTIVATED AND ON TRACK!</p>
        </div>

        @if (!Model.HasActiveMembership)
        {
            <div style="background: #fff3cd; color: #856404; padding: 20px; margin: 20px auto; max-width: 1200px; border: 1px solid #ffeaa7; border-radius: 8px; text-align: center;">
                <h3 style="margin: 0 0 10px 0;">⚠️ Membership Required</h3>
                <p style="margin: 0;">You need an active membership to join classes. <a href="/Transaction/UserMembership" style="color: #856404; text-decoration: underline; font-weight: bold;">Get your membership now!</a></p>
            </div>
        }

        <div class="schedule-container">
            @foreach (var day in daysOfWeek)
            {
                var dayEnum = Enum.Parse<FitCheckWebApp.Models.DayOfWeekClass>(day);
                var classesForDay = Model.ClassesByDay.ContainsKey(dayEnum)
                ? Model.ClassesByDay[dayEnum]
                : new List<FitCheckWebApp.ViewModels.ClassDisplayViewModel>();

                <div class="day-column">
                    <div class="day-header">@day.ToUpper()</div>

                    @if (classesForDay.Any())
                    {
                        @foreach (var cls in classesForDay)
                        {
                            <div class="class-card" data-class-id="@cls.Id">
                                <div class="class-time">@FormatTime(cls.Time)</div>
                                <h3 class="class-name">@cls.Type.ToUpper()</h3>
                                <p class="class-instructor">with @cls.InstructorName</p>
                                <p class="class-duration">@cls.DurationMinutes min | Max @cls.ParticipantLimit</p>

                                @if (!Model.HasActiveMembership)
                                {
                                    <button class="join-btn" disabled style="background-color: #d9534f; color: #fff; cursor: not-allowed; font-size: 0.85rem; padding: 8px;" title="Active membership required">
                                        MEMBERSHIP REQUIRED
                                    </button>
                                }
                                else if (cls.IsFull)
                                {
                                    <button class="join-btn" disabled style="background-color: #555; color: #999; cursor: not-allowed;">FULL</button>
                                }
                                else
                                {
                                    <button class="join-btn" onclick="joinClass(@cls.Id)">JOIN</button>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div class="class-card" style="text-align: center; padding: 40px 20px;">
                            <p style="color: #999;">No classes scheduled</p>
                        </div>
                    }
                </div>
            }
        </div>
    </main>

    <!-- Thank You Popup -->
    <div id="thankYouModal" class="modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <h2>THANK YOU FOR JOINING!</h2>
            <p>Please come at the designated time.</p>
        </div>
    </div>

    <!-- Membership Required Popup -->
    <div id="membershipModal" class="modal">
        <div class="modal-content">
            <span class="close-membership-btn">&times;</span>
            <h2>⚠️ MEMBERSHIP REQUIRED</h2>
            <p style="margin: 20px 0;">You need an active membership to join classes.</p>
            <a href="/Transaction/UserMembership" style="display: inline-block; background: #007bff; color: white; padding: 12px 24px; text-decoration: none; border-radius: 5px; font-weight: bold;">Get Membership Now</a>
        </div>
    </div>

    @functions {
        private string FormatTime(TimeSpan t)
        {
            int h = t.Hours % 12;
            if (h == 0) h = 12;
            string ampm = t.Hours >= 12 ? "PM" : "AM";
            return $"{h}:{t.Minutes:D2} {ampm}";
        }
    }

    <script>
        const modal = document.getElementById('thankYouModal');
        const closeBtn = document.querySelector('#thankYouModal .close-btn');
        const membershipModal = document.getElementById('membershipModal');
        const closeMembershipBtn = document.querySelector('.close-membership-btn');

        if (closeBtn) closeBtn.addEventListener('click', () => modal.style.display = 'none');
        if (closeMembershipBtn) closeMembershipBtn.addEventListener('click', () => membershipModal.style.display = 'none');

        window.addEventListener('click', (e) => {
            if (e.target === modal) modal.style.display = 'none';
            if (e.target === membershipModal) membershipModal.style.display = 'none';
        });

        async function joinClass(classId) {
            const card = document.querySelector(`[data-class-id="${classId}"]`);
            const joinBtn = card.querySelector('.join-btn');

            if (joinBtn.disabled) return;

            // Disable button immediately
            joinBtn.disabled = true;
            joinBtn.textContent = "JOINING...";

            try {
                const response = await fetch('/Account/JoinClass', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ classId: classId })
                });

                const result = await response.json();

                if (result.success) {
                    // Show success modal
                    modal.style.display = "flex";

                    // Check if class is now full based on server response
                    if (result.isFull) {
                        joinBtn.textContent = "FULL";
                        joinBtn.style.backgroundColor = "#555";
                        joinBtn.style.color = "#999";
                    } else {
                        joinBtn.textContent = "JOINED";
                        joinBtn.style.backgroundColor = "#28a745";
                        joinBtn.style.color = "#fff";
                    }
                    joinBtn.style.cursor = "not-allowed";
                } else {
                    // Check if error is due to membership
                    if (result.message && (result.message.toLowerCase().includes('membership') || result.message.toLowerCase().includes('expired'))) {
                        // Show membership required modal
                        membershipModal.style.display = "flex";
                        joinBtn.textContent = "MEMBERSHIP REQUIRED";
                        joinBtn.style.backgroundColor = "#d9534f";
                        joinBtn.style.color = "#fff";
                        joinBtn.style.cursor = "not-allowed";
                        joinBtn.style.fontSize = "0.85rem";
                    } else if (result.message && result.message.toLowerCase().includes('full')) {
                        // Class is full
                        joinBtn.textContent = "FULL";
                        joinBtn.style.backgroundColor = "#555";
                        joinBtn.style.color = "#999";
                        joinBtn.style.cursor = "not-allowed";
                    } else {
                        // Other error
                        alert(result.message || 'Failed to join class');
                        joinBtn.disabled = false;
                        joinBtn.textContent = "JOIN";
                    }
                }
            } catch (error) {
                console.error('Error joining class:', error);
                alert('An error occurred while joining the class');
                joinBtn.disabled = false;
                joinBtn.textContent = "JOIN";
            }
        }
    </script>

    <div class="hr-container">
        <hr>
    </div>

    <footer>
        <div class="footer-container">
            <div class="left-side-footer">
                <div class="description-footer">
                    <img class="fitcheck-logo-footer" src="~/images_fitcheck/fitcheckicon.png">
                    <p>Transform your body and mind at FitCheck Gym. With state-of-the-art equipment, expert trainers, and a supportive community, we're here to help you achieve your fitness goals.</p>
                </div>
                <div class="follow-socials-container">
                    <h4 class="follow-us-footer">FOLLOW US</h4>
                    <div class="social-media-container">
                        <a target="_blank" href="https://www.facebook.com/"><img src="~/images_fitcheck/icon_fb-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.linkedin.com/"><img src="~/images_fitcheck/Icon_linkedin-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.youtube.com/"><img src="~/images_fitcheck/icon_youtube-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.instagram.com/"><img src="~/images_fitcheck/icon_instagram-removebg-preview.png"></a>
                    </div>
                </div>
            </div>
            <div class="right-side-footer">
                <div class="address">
                    <img src="~/images_fitcheck/icon_location-removebg-preview.png">
                    <p>Street 1, Congressional Rd Caloocan City</p>
                </div>
                <div class="email-address">
                    <img src="~/images_fitcheck/icon_email-removebg-preview.png">
                    <p>info@fitcheckgym.com</p>
                </div>
                <div class="contact-number">
                    <img src="~/images_fitcheck/icon_mobile-removebg-preview.png">
                    <p>09192344890 / 09365144587</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>