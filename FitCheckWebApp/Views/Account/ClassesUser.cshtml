   <script>
    const classParticipants = {
        "MORNING YOGA": 10,
        "ZUMBA DANCE": 24,
        "STRENGTH & ENDURANCE TRAINING": 8,
        "PILATES": 15,
        "BOXING FUNDAMENTALS": 12,
        "CROSSFIT TRAINING": 9,
        "HIIT BOOTCAMP": 15,
        "BASICS OF MUAY THAI": 17,
        "HYPERTROPHY LESSON": 19
    };

    const modal = document.getElementById('thankYouModal');
    const closeBtn = document.querySelector('.close-btn');
    const okBtn = document.getElementById('okButton');

    document.querySelectorAll('.class-card').forEach(card => {
        const className = card.querySelector('.class-name').textContent.trim();
        const durationText = card.querySelector('.class-duration').textContent;
        const maxMatch = durationText.match(/Max\s+(\d+)/);
        const joinBtn = card.querySelector('.join-btn');

        if (maxMatch) {
            const maxLimit = parseInt(maxMatch[1]);
            const currentParticipants = classParticipants[className] || 0;

            // Disable button if full
            if (currentParticipants >= maxLimit) {
                joinBtn.disabled = true;
                joinBtn.textContent = "FULL";
                joinBtn.style.backgroundColor = "#555";
                joinBtn.style.color = "#999";
                joinBtn.style.cursor = "not-allowed";
            } else {
                // Show modal when joining
                joinBtn.addEventListener("click", () => {
                    modal.style.display = "flex";
                    classParticipants[className]++;
                    if (classParticipants[className] >= maxLimit) {
                        joinBtn.disabled = true;
                        joinBtn.textContent = "FULL";
                        joinBtn.style.backgroundColor = "#555";
                        joinBtn.style.color = "#999";
                        joinBtn.style.cursor = "not-allowed";
                    }
                });
            }
        }
    });

    // Close modal
    closeBtn.onclick = () => modal.style.display = "none";
    okBtn.onclick = () => modal.style.display = "none";
    window.onclick = (e) => {
        if (e.target === modal) modal.style.display = "none";
    };
</script>





