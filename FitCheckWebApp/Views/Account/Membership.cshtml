@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Membership.css" type="text/css" />
    <link rel="icon" href="/images_fitcheck/fitcheckicon.png" />
    <title>Membership | FitCheck Gym</title>
</head>
<body>
    <header>
        <div class="brand-container">
            <img alt="logo" class="logo" src="/images_fitcheck/fitcheckicon.png">
            <h1 class="brand">FITCHECK</h1>
        </div>
        <nav class="navbar">
            <a href="/">Home</a>
            <a href="/Account/Membership">Membership</a>
            <a href="#">Classes</a>
            <a href="#">About Us</a>
            <a href="/Account/Login">Log In</a>
        </nav>
    </header>

    <main>
        <div class="container">
            <h1>Choose your plan</h1>

            <div class="plans-wrapper">
                <!-- FITSTART Plan -->
                <div class="plan-card">
                    <div class="plan-name">FITSTART</div>
                    <div class="price">
                        <span class="price-amount">₱ 999</span>
                        <span class="price-period">/mo</span>
                    </div>
                    <div class="plan-description">
                        Simple. <span class="highlight-word">Affordable</span>. Start your journey.
                    </div>
                    <div class="includes-label">Includes:</div>
                    <ul class="features-list">
                        <li>24/7 gym access</li>
                        <li>Unlimited standard classes</li>
                        <li>Starter Health Check</li>
                        <li>Free member parking</li>
                    </ul>
                    <button class="subscribe-btn" onclick="window.location.href='/Account/Register'">SUBSCRIBE NOW</button>
                </div>

                <!-- FITELITE Plan (Featured) -->
                <div class="plan-card featured">
                    <div class="plan-name">FITELITE</div>
                    <div class="price">
                        <span class="price-amount">₱ 2,499</span>
                        <span class="price-period">/mo</span>
                    </div>
                    <div class="plan-description">
                        Exclusive perks. <span class="highlight-word">Premium</span> fitness lifestyle.
                    </div>
                    <div class="includes-label">Includes:</div>
                    <ul class="features-list">
                        <li>24/7 gym access</li>
                        <li>Unlimited group + specialty classes</li>
                        <li>Health & Lifestyle assessment</li>
                        <li>Free member parking</li>
                        <li>Exclusive premium lounge</li>
                        <li>VIP locker rooms & showers</li>
                        <li>Discounts on gym merchandise</li>
                        <li>Free guest pass once a month</li>
                    </ul>
                    <button class="subscribe-btn" onclick="window.location.href='/Account/Register'">SUBSCRIBE NOW</button>
                </div>

                <!-- FITPRO Plan -->
                <div class="plan-card">
                    <div class="plan-name">FITPRO</div>
                    <div class="price">
                        <span class="price-amount">₱ 1,499</span>
                        <span class="price-period">/mo</span>
                    </div>
                    <div class="plan-description">
                        Train harder. <span class="highlight-word">Unlock</span> more benefits.
                    </div>
                    <div class="includes-label">Includes:</div>
                    <ul class="features-list">
                        <li>24/7 gym access</li>
                        <li>Unlimited group fitness classes</li>
                        <li>Health & Lifestyle assessment</li>
                        <li>Free member parking</li>
                        <li>Access to community events</li>
                        <li>20% discount on merchandise</li>
                    </ul>
                    <button class="subscribe-btn" onclick="window.location.href='/Account/Register'">SUBSCRIBE NOW</button>
                </div>
            </div>
        </div>
    </main>

    <div class="hr-container">
        <hr>
    </div>
    <footer>
        <div class="footer-container">
            <div class="left-side-footer">
                <div class="description-footer">
                    <img class="fitcheck-logo-footer" src="/images_fitcheck/fitcheckicon.png">
                    <p>Transform your body and mind at FitCheck Gym. With state-of-the-art equipment, expert trainers, and a supportive community, we're here to help you achieve your fitness goals.</p>
                </div>
                <div class="follow-socials-container">
                    <h4 class="follow-us-footer">FOLLOW US</h4>
                    <div class="social-media-container">
                        <a target="_blank" href="https://www.facebook.com/"><img src="/images_fitcheck/icon_fb-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.linkedin.com/"><img src="/images_fitcheck/Icon_linkedin-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.youtube.com/"><img src="/images_fitcheck/icon_youtube-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.instagram.com/"><img src="/images_fitcheck/icon_instagram-removebg-preview.png"></a>
                    </div>
                </div>
            </div>
            <div class="right-side-footer">
                <div class="address">
                    <img src="/images_fitcheck/icon_location-removebg-preview.png">
                    <p>Street 1, Congressional Rd Caloocan City</p>
                </div>
                <div class="email-address">
                    <img src="/images_fitcheck/icon_email-removebg-preview.png">
                    <p>info@fitcheckgym.com</p>
                </div>
                <div class="contact-number">
                    <img src="/images_fitcheck/icon_mobile-removebg-preview.png">
                    <p>09192344890 / 09365144587</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
