<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Fitcheck — Select Payment Method</title>
  <link rel="stylesheet" href="~/css/UserHome.css" asp-append-version="true" />
</head>
<body>
  <header>
        <div class="brand-container">
            <img alt="logo" class="logo" src="IMAGES/LOGO.png">
            <h1 class="brand">FITCHECK</h1>
        </div>
        <nav class="navbar">
            <a href="">Home</a>
            <a href="Membership(user).html">Membership</a>
            <a href="">Classes</a>
            <a href="LogInPage.html">Log out</a>
        </nav> 
    </header>

    <main>
        <section class="welcome">
            <h2>WELCOME Member,</h2>
        </section>

        <section class="membership-overview">
            <h3>MEMBERSHIP OVERVIEW</h3>
            <div class="overview-box">

                <p><strong>Status:</strong> <span class="active">@Model.Status</span></p>
                <p><strong>Last Payment Date:</strong> @Model.TransactionDate.ToString("MMMM d, yyyy")</p>
                <p><strong>Payment Status: </strong> <span class="paid">Paid</span></p>
                <p><strong>Membership Type:</strong>  @Model.MembershipPlan</p>
                <p><strong>Next Payment Due:</strong> @Model.EndDate.ToString("MMMM d, yyyy")</p>

            </div>
        </section>

        <section class="membership-pass">
            <div class="pass-card">
                <div class="photo"></div>
                <div class="pass-details">

                    <h3>MEMBERSHIP PASS</h3>
                    <p><span>Name :</span> Juan Dela Cruz</p>
                    <p><span>Member ID :</span> 12345 - AB</p>
                    <p><span>Plan Type :</span> @Model.MembershipPlan</p>
                    <p><span>Valid until : </span> @Model.EndDate.ToString("MMMM d, yyyy")</p>

                </div>
            </div>
        </section>
    </main>

<!-- FOOTER -->
<footer>
  <div class="footer-container">

    <!-- LEFT SIDE -->
    <div class="footer-left">
      <div class="footer-top">
        <img src="images/logo.png" alt="FitCheck Logo" class="footer-logo">
        <p class="footer-desc">
          Transform your body and mind at FitCheck Gym. 
          With state-of-the-art equipment, expert trainers, 
          and a supportive community, we’re here to help 
          you achieve your fitness goals.
        </p>
      </div>

      <div class="footer-bottom">
        <p class="follow-text">FOLLOW US</p>
        <div class="social-icons">
          <a href="#"><i class="fab fa-facebook"></i></a>
          <a href="#"><i class="fab fa-linkedin"></i></a>
          <a href="#"><i class="fab fa-youtube"></i></a>
          <a href="#"><i class="fab fa-instagram"></i></a>
        </div>
      </div>
    </div>

    <!-- RIGHT SIDE -->
    <div class="footer-right">
      <p><i class="fas fa-map-marker-alt"></i> Street 1, Congressional Rd Caloocan City</p>
      <p><i class="fas fa-envelope"></i> info@fitcheckgym.com</p>
      <p><i class="fas fa-mobile-alt"></i> 09192344890 / 09365414587</p>
    </div>

  </div>
</footer>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

</body>
</html>
