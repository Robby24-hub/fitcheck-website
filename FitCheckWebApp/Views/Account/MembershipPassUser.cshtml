@model FitCheckWebApp.ViewModels.MembershipPassViewModel

@{
    Layout = null;

}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS - FIXED -->
    <link rel="stylesheet" href="~/css/MembershipPassUser.css" asp-append-version="true" />
    <!-- Favicon -->
    <link rel="icon" href="~/images_fitcheck/fitcheckicon.png" />
    <title>Membership Pass | FitCheck Gym</title>
</head>
<body>
    <header>
        <div class="brand-container">
            <img asp-append-version="true" src="~/images_fitcheck/fitcheckicon.png" alt="logo" class="logo" />
            <h1 class="brand">FITCHECK</h1>
        </div>

        <nav class="navbar">
            <a asp-controller="Account" asp-action="AccountUser" class="back-link">
                <i data-lucide="arrow-left"></i>
                <span>Back</span>
            </a>
        </nav>
    </header>


    <main>
        <section class="membership-pass">
            <div class="pass-card">
                <div class="pass-header">
                    <img src="~/images_fitcheck/fitcheckicon.png" alt="FitCheck Logo">
                    <h3>MEMBERSHIP PASS</h3>
                </div>

                <div class="pass-body">
                    <div class="photo"></div>
                    <div class="pass-details">
                        <p>
                            <span class="label">Name :</span>
                            <span class="value">@Model?.FullName </span>
                        </p>
                        <p>
                            <span class="label">Member ID :</span>
                            <span class="value">@Model?.MemberID "N/A"</span>
                        </p>
                        <p>
                            <span class="label">Plan Type :</span>
                            <span class="value">@Model?.MembershipPlan "N/A"</span>
                        </p>
                            
                        <p>
                            <span class="label">Valid until :</span>
                            <span class="value">@((Model?.EndDate)?.ToString("MMMM yyyy") ?? "N/A")</span>
                        </p>


                    </div>
                </div>

                <div class="pass-footer"></div>
            </div>
        </section>

        <div class="btn-container">
            <form><button class="print-btn">Print</button></form>
        </div>

        <!-- ===== MODALS SECTION ===== -->
        <!-- Cancel Membership Modal -->
        <div id="cancelModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2>Cancel Membership</h2>
                <p>Are you sure you want to cancel your current gym membership?</p>
                <div class="warning">⚠️ Once cancelled, you’ll lose access to gym facilities and online services.</div>
                <div class="modal-actions">
                    <button class="btn confirm" id="confirmCancel">Yes, Cancel</button>
                    <button class="btn decline" id="closeCancel">No, Keep Plan</button>
                </div>
            </div>
        </div>

        <!-- Renew Membership Modal -->
        <div id="renewModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2>Renew Membership</h2>
                <p>Would you like to renew your current membership plan for another cycle?</p>
                <div class="info">💪 Enjoy continued access to all FitCheck Gym services and perks!</div>
                <div class="modal-actions">
                    <button class="btn confirm" id="confirmRenew">Yes, Renew</button>
                    <button class="btn decline" id="closeRenew">No, Later</button>
                </div>
            </div>
        </div>

        <!-- Upgrade Plan Modal -->
        <div id="upgradeModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2>Upgrade Plan</h2>
                <p>Want to upgrade your plan to access premium equipment and personal training?</p>
                <div class="info">🚀 Choose from exclusive membership tiers for enhanced benefits.</div>
                <div class="modal-actions">
                    <button class="btn confirm" id="confirmUpgrade">Yes, Upgrade</button>
                    <button class="btn decline" id="closeUpgrade">No, Stay Current</button>
                </div>
            </div>
        </div>

        <!-- ===== JAVASCRIPT ===== -->
        <script>
            // --- Helper Function ---
            function setupModal(buttonClass, modalId, closeBtns) {
              const openBtn = document.querySelector(buttonClass);
              const modal = document.getElementById(modalId);
              const closeX = modal.querySelector(".close");
              const decline = document.getElementById(closeBtns);

              openBtn.addEventListener("click", function (e) {
                e.preventDefault();
                modal.style.display = "flex";
              });

              closeX.onclick = function () { modal.style.display = "none"; };
              decline.onclick = function () { modal.style.display = "none"; };
              window.onclick = function (event) {
                if (event.target === modal) modal.style.display = "none";
              };
            }

            // Initialize Modals
            setupModal(".manage-btn.cancel", "cancelModal", "closeCancel");
            setupModal(".manage-btn.renew", "renewModal", "closeRenew");
            setupModal(".manage-btn.upgrade", "upgradeModal", "closeUpgrade");

            // Actions
            document.getElementById("confirmCancel").onclick = () => alert("Your membership has been cancelled.");
            document.getElementById("confirmRenew").onclick = () => alert("Membership renewed successfully!");
            document.getElementById("confirmUpgrade").onclick = () => alert("Redirecting to upgrade options...");
        </script>


        
    </main>

    <div class="hr-container">
        <hr>
    </div>

    <footer>
        <div class="footer-container">
            <div class="left-side-footer">
                <div class="description-footer">
                    <img class="fitcheck-logo-footer" src="~/images_fitcheck/fitcheckicon.png">
                    <p>Transform your body and mind at FitCheck Gym. With state-of-the-art equipment, expert trainers, and a supportive community, we're here to help you achieve your fitness goals.</p>
                </div>
                <div class="follow-socials-container">
                    <h4 class="follow-us-footer">FOLLOW US</h4>
                    <div class="social-media-container">
                        <a target="_blank" href="https://www.facebook.com/"><img src="~/images_fitcheck/icon_fb-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.linkedin.com/"><img src="~/images_fitcheck/Icon_linkedin-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.youtube.com/"><img src="~/images_fitcheck/icon_youtube-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.instagram.com/"><img src="~/images_fitcheck/icon_instagram-removebg-preview.png"></a>
                    </div>
                </div>
            </div>
            <div class="right-side-footer">
                <div class="address">
                    <img src="~/images_fitcheck/icon_location-removebg-preview.png">
                    <p>Street 1, Congressional Rd Caloocan City</p>
                </div>
                <div class="email-address">
                    <img src="~/images_fitcheck/icon_email-removebg-preview.png">
                    <p>info@fitcheckgym.com</p>
                </div>
                <div class="contact-number">
                    <img src="~/images_fitcheck/icon_mobile-removebg-preview.png">
                    <p>09192344890 / 09365144587</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        lucide.createIcons();
    </script>

</body>
</html>