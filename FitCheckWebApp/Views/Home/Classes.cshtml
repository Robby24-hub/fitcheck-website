@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS - FIXED -->
    <link rel="stylesheet" href="~/css/Classes.css" asp-append-version="true" />
    <!-- Favicon -->
    <link rel="icon" href="~/images_fitcheck/fitcheckicon.png" />
    <title>Classes | FitCheck Gym</title>
</head>
<body>
    <header>

        <div class="brand-container">
            <img asp-append-version="true" src="~/images_fitcheck/fitcheckicon.png" alt="logo" class="logo" />
            <h1 class="brand">FITCHECK</h1>
        </div>

        <nav class="navbar">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="Membership">Membership</a>
            <a asp-controller="Home" asp-action="Classes">Classes</a>
            <a asp-controller="Home" asp-action="AboutUs">About Us</a>
            <a asp-controller="Account" asp-action="Login">Log In</a>
        </nav>
    </header>

    <main>
        <div class="classes-header">
            <h1>CLASSES</h1>
            <p>EXPERIENCE THE VARIETY OF ACTIVITIES YOU CAN ATTEND!</p>
        </div>

        <div class="schedule-container">
            <!-- MONDAY -->
            <div class="day-column">
                <div class="day-header">MONDAY</div>

                <div class="class-card">
                    <div class="class-time">6:00 AM</div>
                    <h3 class="class-name">MORNING YOGA</h3>
                    <p class="class-instructor">with Shaira Sollano</p>
                    <p class="class-duration">60 min | Max 15</p>
                </div>

                <div class="class-card">
                    <div class="class-time">1:00 PM</div>
                    <h3 class="class-name">ZUMBA DANCE</h3>
                    <p class="class-instructor">with Michael Lising</p>
                    <p class="class-duration">45 min | Max 25</p>
                </div>

                <div class="class-card">
                    <div class="class-time">6:00 PM</div>
                    <h3 class="class-name">STRENGTH & ENDURANCE TRAINING</h3>
                    <p class="class-instructor">with Rex Tacio</p>
                    <p class="class-duration">90 min | Max 10</p>
                </div>
            </div>

            <!-- TUESDAY -->
            <div class="day-column">
                <div class="day-header">TUESDAY</div>

                <div class="class-card">
                    <div class="class-time">8:00 AM</div>
                    <h3 class="class-name">PILATES</h3>
                    <p class="class-instructor">with Maria Garcia</p>
                    <p class="class-duration">60 min | Max 15</p>
                </div>

                <div class="class-card">
                    <div class="class-time">2:00 PM</div>
                    <h3 class="class-name">BOXING FUNDAMENTALS</h3>
                    <p class="class-instructor">with Bartudo Marcelo</p>
                    <p class="class-duration">90 min | Max 12</p>
                </div>

                <div class="class-card">
                    <div class="class-time">6:00 PM</div>
                    <h3 class="class-name">CROSSFIT TRAINING</h3>
                    <p class="class-instructor">with Bobby Candano</p>
                    <p class="class-duration">90 min | Max 10</p>
                </div>
            </div>

            <!-- WEDNESDAY -->
            <div class="day-column">
                <div class="day-header">WEDNESDAY</div>

                <div class="class-card">
                    <div class="class-time">7:00 AM</div>
                    <h3 class="class-name">HIIT BOOTCAMP</h3>
                    <p class="class-instructor">with Mike Rodriguez</p>
                    <p class="class-duration">60 min | Max 15</p>
                </div>

                <div class="class-card">
                    <div class="class-time">1:00 PM</div>
                    <h3 class="class-name">BASICS OF MUAY THAI</h3>
                    <p class="class-instructor">with Bantog Jumangkon</p>
                    <p class="class-duration">120 min | Max 18</p>
                </div>

                <div class="class-card">
                    <div class="class-time">8:00 PM</div>
                    <h3 class="class-name">HYPERTROPHY LESSON</h3>
                    <p class="class-instructor">with Diddy</p>
                    <p class="class-duration">60 min | Max 20</p>
                </div>
            </div>
        </div>
        <div class="btn-container">
            <a asp-controller="Account" asp-action="Login"><button class="btn-view-more">View More Classes</button></a>
        </div>
    </main>

    <div class="hr-container">
        <hr>
    </div>

    <footer>
        <div class="footer-container">
            <div class="left-side-footer">
                <div class="description-footer">
                    <img class="fitcheck-logo-footer" src="~/images_fitcheck/fitcheckicon.png">
                    <p>Transform your body and mind at FitCheck Gym. With state-of-the-art equipment, expert trainers, and a supportive community, we're here to help you achieve your fitness goals.</p>
                </div>
                <div class="follow-socials-container">
                    <h4 class="follow-us-footer">FOLLOW US</h4>
                    <div class="social-media-container">
                        <a target="_blank" href="https://www.facebook.com/"><img src="~/images_fitcheck/icon_fb-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.linkedin.com/"><img src="~/images_fitcheck/Icon_linkedin-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.youtube.com/"><img src="~/images_fitcheck/icon_youtube-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.instagram.com/"><img src="~/images_fitcheck/icon_instagram-removebg-preview.png"></a>
                    </div>
                </div>
            </div>
            <div class="right-side-footer">
                <div class="address">
                    <img src="~/images_fitcheck/icon_location-removebg-preview.png">
                    <p>Street 1, Congressional Rd Caloocan City</p>
                </div>
                <div class="email-address">
                    <img src="~/images_fitcheck/icon_email-removebg-preview.png">
                    <p>info@fitcheckgym.com</p>
                </div>
                <div class="contact-number">
                    <img src="~/images_fitcheck/icon_mobile-removebg-preview.png">
                    <p>09192344890 / 09365144587</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>