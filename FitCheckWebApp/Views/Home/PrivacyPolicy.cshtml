@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Corrected MVC linking syntax -->
    <link rel="stylesheet" href="~/css/PrivacyPolicy.css" asp-append-version="true">
    <link rel="icon" href="~/images_fitcheck/fitcheckicon.png" type="image/png">
    <title>Privacy Policy | Fitcheck Gym</title>
</head>
<body>
    <header>
        <div class="brand-container">
            <img alt="logo" class="logo" src="~/images_fitcheck/fitcheckicon.png">
            <h1 class="brand">FITCHECK</h1>
        </div>

        <nav class="navbar">

            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="Membership">Membership</a>
            <a asp-controller="Home" asp-action="Classes">Classes</a>
            <a asp-controller="Home" asp-action="AboutUs">About Us</a>
            <a asp-controller="Account" asp-action="Login">Log In</a>

        </nav>
    </header>

    <main>
        <div class="p-and-p-container">
            <h1>Privacy Policy</h1>
            <ol>
                <li>
                    Information We Collect
                    <ul>
                        <li>Personal details (name, date of birth, gender, address, contact number, email).</li>
                        <li>Membership details (plan type, start/end dates, payment history).</li>
                        <li>Health & safety information voluntarily provided (medical conditions, injuries).</li>
                        <li>Emergency contact information.</li>
                    </ul>
                </li>
                <li>
                    How We Use Your Information
                    <ul>
                        <li>To process memberships and payments.</li>
                        <li>To contact you regarding gym updates, classes, and account status.</li>
                        <li>To ensure member safety in case of emergencies.</li>
                        <li>To comply with billing and legal obligations.</li>
                    </ul>
                </li>
                <li>
                    Data Sharing & Security
                    <ul>
                        <li>We do not sell or rent your personal information to third parties.</li>
                        <li>Data may be shared with payment processors and service providers strictly for operational purposes.</li>
                        <li>Reasonable measures are taken to protect your data from unauthorized access.</li>
                    </ul>
                </li>
                <li>
                    Marketing & Communication
                    <ul>
                        <li>With your consent, we may send promotions, offers, or newsletters.</li>
                        <li>You can opt out of marketing communications at any time.</li>
                    </ul>
                </li>
                <li>
                    Your Rights
                    <ul>
                        <li>You may request access, correction, or deletion of your personal data.</li>
                        <li>You may withdraw consent for data processing (subject to legal and contractual obligations).</li>
                    </ul>
                </li>
                <li>
                    Policy Updates
                    <ul>
                        <li>The gym may update this Privacy Policy as needed.</li>
                        <li>Members will be notified of significant changes.</li>
                    </ul>
                </li>
            </ol>
            <div class="btn-container">
                <a asp-controller="Account" asp-action="Register"><button class="return-btn">Return to Registration</button></a>
            </div>
        </div>


    </main>

    <div class="hr-container">
        <hr>
    </div>

    <footer>
        <div class="footer-container">
            <div class="left-side-footer">
                <div class="description-footer">
                    <img class="fitcheck-logo-footer" src="~/images_fitcheck/fitcheckicon.png">
                    <p>
                        Transform your body and mind at FitCheck Gym. With state-of-the-art equipment,
                        expert trainers, and a supportive community, we're here to help you achieve your fitness goals.
                    </p>
                </div>

                <div class="follow-socials-container">
                    <h4 class="follow-us-footer">FOLLOW US</h4>
                    <div class="social-media-container">
                        <a target="_blank" href="https://www.facebook.com/">
                            <img src="~/images_fitcheck/icon_fb-removebg-preview.png">
                        </a>
                        <a target="_blank" href="https://www.linkedin.com/">
                            <img src="~/images_fitcheck/Icon_linkedin-removebg-preview.png">
                        </a>
                        <a target="_blank" href="https://www.youtube.com/">
                            <img src="~/images_fitcheck/icon_youtube-removebg-preview.png">
                        </a>
                        <a target="_blank" href="https://www.instagram.com/">
                            <img src="~/images_fitcheck/icon_instagram-removebg-preview.png">
                        </a>
                    </div>
                </div>
            </div>

            <div class="right-side-footer">
                <div class="address">
                    <img src="~/images_fitcheck/icon_location-removebg-preview.png">
                    <p>Street 1, Congressional Rd Caloocan City</p>
                </div>
                <div class="email-address">
                    <img src="~/images_fitcheck/icon_email-removebg-preview.png">
                    <p>info@fitcheckgym.com</p>
                </div>
                <div class="contact-number">
                    <img src="~/images_fitcheck/icon_mobile-removebg-preview.png">
                    <p>09192344890 / 09365144587</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>

