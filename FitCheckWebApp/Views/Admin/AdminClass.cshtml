<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Fitcheck</title>
    <link rel="stylesheet" href="~/css/AdminClass.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="brand-container">
            <img alt="logo" class="logo" src="IMAGES/LOGO.png">
            <h1 class="brand">FITCHECK</h1>
        </div>
        <nav class="navbar">

            <a asp-controller="Admin" asp-action="AdminHome">Home</a>
            <a asp-controller="Admin" asp-action="AdminPayment">Payment</a>
            <a asp-controller="Admin" asp-action="AdminClass">Classes</a>
            <a asp-controller="Admin" asp-action="AdminMember">Members</a>

            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit" class="logout-btn">Logout</button>
            </form>

        </nav>
    </header>

    <!-- Main -->
    <!-- MAIN -->
    <main>
        <h2>WELCOME Admin,</h2>
        <h3>CLASS OVERVIEW</h3>

        <div class="add-class-btn">
            <button class="add-class" id="openFormBtn">+ Add Class</button>
        </div>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Instructor</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Participant</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Shaira Sollano</td>
                        <td>YOGA</td>
                        <td>11-30-25</td>
                        <td>10:00AM</td>
                        <td>20</td>
                        <td>
                            <button class="edit">Edit</button>
                            <button class="delete">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>

    <!-- POPUP FORM -->
<div class="popup-overlay" id="popupForm">
  <div class="popup">
    <h3>CLASS DETAIL</h3>
    <form>
      <label>Instructor</label>
      <select>
        <option value="" disabled selected>Select instructor</option>
        <option>Shaira Sollano</option>
        <option>Michael Reyes</option>
        <option>Angela Cruz</option>
        <option>Rico Santos</option>
        <option>Maria Dela Cruz</option>
        <option>John Villanueva</option>
        <option>Kim Bautista</option>
      </select>

      <label>Type</label>
      <select>
        <option value="" disabled selected>Select class type</option>
        <option>Yoga</option>
        <option>Zumba</option>
        <option>Pilates</option>
        <option>CrossFit</option>
        <option>HIIT</option>
        <option>Strength Training</option>
        <option>Cardio</option>
        <option>Dance Fitness</option>
      </select>

      <div class="form-row">
        <div>
          <label>Day</label>
      <select>
        <option value="" disabled selected>Select</option>
        <option>Monday</option>
        <option>Tuesday</option>
        <option>Wednesday</option>
        <option>Thursday</option>
        <option>Friday</option>
        <option>Saturday</option>
      </select>
        </div>
        <div>
          <label>Time</label>
          <input type="time">
        </div>
         <div>
          <label>Duration</label>
      <select>
        <option value="" disabled selected>Select</option>
        <option>30min</option>
        <option>45min</option>
        <option>60min</option>
        <option>75min</option>
        <option>80min</option>
        <option>90min</option>
      </select>
        </div>
      </div>

      <label>Participant Limit</label>
      <select id="participantLimit" name="participantLimit">
        <option value="" disabled selected>Select limit</option>
        <!-- Generate 1–30 -->
        <script>
          for (let i = 1; i <= 30; i++) {
            document.write(`<option value="${i}">${i}</option>`);
          }
        </script>
      </select>

      <button type="submit" class="submit-btn">ADD CLASS</button>
    </form>
    <span class="close-btn" id="closeFormBtn">&times;</span>
  </div>
</div>


  <!-- EDIT POPUP FORM -->
<div class="popup-overlay" id="editForm">
  <div class="popup">
    <h3>EDIT CLASS DETAIL</h3>
    <form>
      <label>Instructor</label>
      <select>
        <option value="" disabled selected>Select instructor</option>
        <option>Shaira Sollano</option>
        <option>Michael Reyes</option>
        <option>Angela Cruz</option>
        <option>Rico Santos</option>
        <option>Maria Dela Cruz</option>
        <option>John Villanueva</option>
        <option>Kim Bautista</option>
      </select>

      <label>Type</label>
      <select>
        <option value="" disabled selected>Select class type</option>
        <option>Yoga</option>
        <option>Zumba</option>
        <option>Pilates</option>
        <option>CrossFit</option>
        <option>HIIT</option>
        <option>Strength Training</option>
        <option>Cardio</option>
        <option>Dance Fitness</option>
      </select>

      <div class="form-row">
        <div>
          <label>Day</label>
      <select>
        <option value="" disabled selected>Select</option>
        <option>Monday</option>
        <option>Tuesday</option>
        <option>Wednesday</option>
        <option>Thursday</option>
        <option>Friday</option>
        <option>Saturday</option>
      </select>
        </div>
        <div>
          <label>Time</label>
          <input type="time">
        </div>
         <div>
          <label>Duration</label>
      <select>
        <option value="" disabled selected>Select</option>
        <option>30min</option>
        <option>45min</option>
        <option>60min</option>
        <option>75min</option>
        <option>80min</option>
        <option>90min</option>
      </select>
        </div>
      </div>

      <label>Participant Limit</label>
      <select id="editParticipantLimit" name="editParticipantLimit">
        <option value="" disabled selected>Select limit</option>
        <script>
          for (let i = 1; i <= 30; i++) {
            document.write(`<option value="${i}">${i}</option>`);
          }
        </script>
      </select>

      <button type="submit" class="submit-btn">UPDATE CLASS</button>
    </form>
    <span class="close-btn" id="closeEditBtn">&times;</span>
  </div>
</div>



    <!-- SCRIPT -->
    <script>
        const openBtn = document.getElementById('openFormBtn');
        const closeBtn = document.getElementById('closeFormBtn');
        const popup = document.getElementById('popupForm');

        openBtn.addEventListener('click', () => {
          popup.style.display = 'flex';
        });

        closeBtn.addEventListener('click', () => {
          popup.style.display = 'none';
        });

        window.addEventListener('click', (e) => {
          if (e.target === popup) {
            popup.style.display = 'none';
          }
        });
    </script>

    <script>
        const editButtons = document.querySelectorAll('.edit');
        const editPopup = document.getElementById('editForm');
        const closeEditBtn = document.getElementById('closeEditBtn');

        // Show edit form when "Edit" is clicked
        editButtons.forEach(button => {
          button.addEventListener('click', () => {
            editPopup.style.display = 'flex';
          });
        });

        // Close edit form when X is clicked
        closeEditBtn.addEventListener('click', () => {
          editPopup.style.display = 'none';
        });

        // Close edit form when clicking outside
        window.addEventListener('click', (e) => {
          if (e.target === editPopup) {
            editPopup.style.display = 'none';
          }
        });
    </script>



