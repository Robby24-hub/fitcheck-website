@{

    Layout = null;

}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Fitcheck</title>
    <link rel="stylesheet" href="AdminClass.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="brand-container">
            <img alt="logo" class="logo" src="IMAGES/LOGO.png">
            <h1 class="brand">FITCHECK</h1>
        </div>
        <nav class="navbar">
            <a asp-controller="Account" asp-action="UserHome">Home</a>
            <a asp-controller="Transaction" asp-action="Membership">Payment</a>
            <a asp-controller="Account" asp-action="ClassesUser">Member</a>
            <a asp-controller="Account" asp-action="Products">Classes</a>
            <a asp-controller="Account" asp-action="Products">Log out</a>

        </nav>
    </header>

    <!-- Main -->
    <!-- MAIN -->
    <main>
        <h2>WELCOME Admin,</h2>
        <h3>CLASS OVERVIEW</h3>

        <div class="add-class-btn">
            <button class="add-class" id="openFormBtn">+ Add Class</button>
        </div>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Instructor</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Participant</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Shaira Sollano</td>
                        <td>YOGA</td>
                        <td>11-30-25</td>
                        <td>10:00AM</td>
                        <td>20</td>
                        <td>
                            <button class="edit">Edit</button>
                            <button class="delete">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>

    <!-- POPUP FORM -->
    <div class="popup-overlay" id="popupForm">
        <div class="popup">
            <h3>CLASS DETAIL</h3>
            <form>
                <label>Instructor</label>
                <input type="text" placeholder="Enter instructor name">

                <label>Type</label>
                <input type="text" placeholder="Enter class type">

                <div class="form-row">
                    <div>
                        <label>Date</label>
                        <input type="date">
                    </div>
                    <div>
                        <label>Time</label>
                        <input type="time">
                    </div>
                </div>

                <label>Participant Limit</label>
                <input type="text" id="participantLimit" name="participantLimit">

                <button type="submit" class="submit-btn">ADD CLASS</button>
            </form>
            <span class="close-btn" id="closeFormBtn">&times;</span>
        </div>
    </div>

    <!-- EDIT POPUP FORM -->
    <div class="popup-overlay" id="editForm">
        <div class="popup">
            <h3>EDIT CLASS DETAIL</h3>
            <form>
                <label>Instructor</label>
                <input type="text" placeholder="Enter instructor name">

                <label>Type</label>
                <input type="text" placeholder="Enter class type">

                <div class="form-row">
                    <div>
                        <label>Date</label>
                        <input type="date">
                    </div>
                    <div>
                        <label>Time</label>
                        <input type="time">
                    </div>
                </div>

                <label>Participant Limit</label>
                <input type="text" id="editParticipantLimit" name="editParticipantLimit">

                <button type="submit" class="submit-btn">UPDATE CLASS</button>
            </form>
            <span class="close-btn" id="closeEditBtn">&times;</span>
        </div>
    </div>


    <!-- SCRIPT -->
    <script>
        const openBtn = document.getElementById('openFormBtn');
        const closeBtn = document.getElementById('closeFormBtn');
        const popup = document.getElementById('popupForm');

        openBtn.addEventListener('click', () => {
          popup.style.display = 'flex';
        });

        closeBtn.addEventListener('click', () => {
          popup.style.display = 'none';
        });

        window.addEventListener('click', (e) => {
          if (e.target === popup) {
            popup.style.display = 'none';
          }
        });
    </script>

    <script>
        const editButtons = document.querySelectorAll('.edit');
        const editPopup = document.getElementById('editForm');
        const closeEditBtn = document.getElementById('closeEditBtn');

        // Show edit form when "Edit" is clicked
        editButtons.forEach(button => {
          button.addEventListener('click', () => {
            editPopup.style.display = 'flex';
          });
        });

        // Close edit form when X is clicked
        closeEditBtn.addEventListener('click', () => {
          editPopup.style.display = 'none';
        });

        // Close edit form when clicking outside
        window.addEventListener('click', (e) => {
          if (e.target === editPopup) {
            editPopup.style.display = 'none';
          }
        });
    </script>



    <div class="hr-container">
        <hr>
    </div>


    <div class="hr-container">
        <hr>
    </div>

    <footer>
        <div class="footer-container">
            <div class="left-side-footer">
                <div class="description-footer">
                    <img class="fitcheck-logo-footer" src="~/images_fitcheck/fitcheckicon.png">
                    <p>Transform your body and mind at FitCheck Gym. With state-of-the-art equipment, expert trainers, and a supportive community, we're here to help you achieve your fitness goals.</p>
                </div>
                <div class="follow-socials-container">
                    <h4 class="follow-us-footer">FOLLOW US</h4>
                    <div class="social-media-container">
                        <a target="_blank" href="https://www.facebook.com/"><img src="~/images_fitcheck/icon_fb-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.linkedin.com/"><img src="~/images_fitcheck/Icon_linkedin-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.youtube.com/"><img src="~/images_fitcheck/icon_youtube-removebg-preview.png"></a>
                        <a target="_blank" href="https://www.instagram.com/"><img src="~/images_fitcheck/icon_instagram-removebg-preview.png"></a>
                    </div>
                </div>
            </div>
            <div class="right-side-footer">
                <div class="address">
                    <img src="~/images_fitcheck/icon_location-removebg-preview.png">
                    <p>Street 1, Congressional Rd Caloocan City</p>
                </div>
                <div class="email-address">
                    <img src="~/images_fitcheck/icon_email-removebg-preview.png">
                    <p>info@fitcheckgym.com</p>
                </div>
                <div class="contact-number">
                    <img src="~/images_fitcheck/icon_mobile-removebg-preview.png">
                    <p>09192344890 / 09365144587</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>